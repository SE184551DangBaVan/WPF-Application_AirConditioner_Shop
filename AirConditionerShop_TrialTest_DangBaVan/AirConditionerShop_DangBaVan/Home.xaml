<Window x:Class="AirConditionerShop_DangBaVan.Home"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AirConditionerShop_DangBaVan"
        mc:Ignorable="d"
        Title="Home" Height="450" Width="800"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.Background>
            <RadialGradientBrush GradientOrigin="0.5,0.5" RadiusX="0.5" RadiusY="0.5">
                <GradientStop Color="#000000" Offset="0.4" />
                <GradientStop Color="#00008B" Offset="0.7" />
                <GradientStop Color="#4B0082" Offset="1" />
            </RadialGradientBrush>
        </Grid.Background>
        <TextBlock Text="Welcome, our most valuable Member!"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   FontSize="36"
                   FontWeight="Bold"
                   Foreground="White"
                   TextAlignment="Center"
                   TextWrapping="Wrap">
            <TextBlock.Effect>
                <DropShadowEffect Color="Black" BlurRadius="10" ShadowDepth="2" />
            </TextBlock.Effect>
        </TextBlock>
    </Grid>
</Window>

